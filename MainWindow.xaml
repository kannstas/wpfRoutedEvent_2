<Window x:Class="WpfRoutedEvent_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel ButtonBase.Click="StackPanel_Click" 
                    HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top" Width="100">
            <TextBox x:Name="txtBox" TextWrapping="Wrap" Text="TextBox" Width="120"/>
            <Button x:Name="butAdd" Content="x+x"/>
            <Button x:Name="butMult" Content="x*x"/>
            <Button x:Name="butSquare" Content="√x"/>
        </StackPanel>

    </Grid>
</Window>
